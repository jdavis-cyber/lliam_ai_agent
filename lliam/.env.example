# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Lliam data directory (default: ~/.lliam)
LLIAM_DATA_DIR=~/.lliam

# Log level: debug | info | warn | error
LLIAM_LOG_LEVEL=info

# ─── Telegram Channel ──────────────────────────────────────────
# Set LLIAM_TELEGRAM_ENABLED=true to activate Telegram bot
LLIAM_TELEGRAM_ENABLED=false
LLIAM_TELEGRAM_BOT_TOKEN=
# Comma-separated Telegram user IDs allowed to message the bot (empty = allow all)
LLIAM_TELEGRAM_ALLOWLIST=

# ─── iMessage Channel (requires BlueBubbles on macOS) ──────────
LLIAM_IMESSAGE_ENABLED=false
LLIAM_IMESSAGE_SERVER_URL=http://localhost:1234
LLIAM_IMESSAGE_PASSWORD=
# Comma-separated phone numbers or emails allowed (empty = allow all)
LLIAM_IMESSAGE_ALLOWLIST=
